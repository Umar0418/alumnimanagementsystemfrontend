<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="32dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- App Icon with sky blue highlight -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_graduation"
        android:background="@drawable/circle_light_blue"
        android:padding="26dp"
        app:tint="@color/sky_blue_primary"/>

    <!-- Title with sky blue highlight -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_marginTop="24dp"
        android:text="Alumni Connect"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/sky_blue_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_marginTop="8dp"
        android:text="Bridging students, alumni &amp; administration"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="48dp">

        <!-- Student Login Button -->
        <Button
            android:id="@+id/btnStudent"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Student Login"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="@color/sky_blue_primary"
            app:cornerRadius="26dp"/>

        <!-- Alumni Login Button -->
        <Button
            android:id="@+id/btnAlumni"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Alumni Login"
            android:textColor="@color/sky_blue_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            app:strokeColor="@color/sky_blue_primary"
            app:strokeWidth="2dp"
            app:cornerRadius="26dp"/>

        <!-- Admin Login Link -->
        <TextView
            android:id="@+id/btnAdmin"
            android:layout_marginTop="24dp"
            android:text="Admin Login"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/sky_blue_dark"
            android:drawableStart="@drawable/ic_shield"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Footer at bottom -->
    <TextView
        android:layout_marginTop="60dp"
        android:text="Â© 2026 SIMATS Alumni System"
        android:textSize="12sp"
        android:textColor="@color/text_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>