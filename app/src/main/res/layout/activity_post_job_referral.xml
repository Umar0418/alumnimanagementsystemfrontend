<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PostJobReferralActivity">

    <!-- Header with sky blue gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header_skyblue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/circle_button_bg"
            app:tint="@color/white"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Post Job Referral"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>
            <EditText
                android:id="@+id/etJobTitle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="e.g. Software Engineer"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Company"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>
            <EditText
                android:id="@+id/etCompany"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="e.g. Google, Microsoft"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>
            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="e.g. San Francisco, CA"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Job Type"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>
            <EditText
                android:id="@+id/etJobType"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="e.g. Full-time, Internship"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Experience / Salary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>
            <EditText
                android:id="@+id/etExperience"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="e.g. 2+ years, $100k-$120k"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Job Description"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>
            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="Describe the role..."
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Application Link or Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>
            <EditText
                android:id="@+id/etApplicationLink"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="e.g. https://careers.google.com/123"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnPostJob"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:text="Post Job"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/sky_blue_primary"
                app:cornerRadius="12dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>