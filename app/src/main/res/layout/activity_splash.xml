<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <!-- App Icon with minimal animation -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_graduation"
        android:background="@drawable/circle_light_blue"
        android:padding="24dp" />

    <!-- Title with sky blue highlight -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_marginTop="24dp"
        android:text="Alumni Connect"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/sky_blue_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Subtitle -->
    <TextView
        android:layout_marginTop="8dp"
        android:text="Bridging students, alumni, and administration"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Student Login Button -->
    <Button
        android:id="@+id/btnStudent"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Student Login"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/sky_blue_primary"
        app:cornerRadius="12dp" />

    <!-- Alumni Login Button -->
    <Button
        android:id="@+id/btnAlumni"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Alumni Login"
        android:textColor="@color/sky_blue_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:strokeColor="@color/sky_blue_primary"
        app:strokeWidth="2dp"
        app:cornerRadius="12dp" />

    <!-- Admin Login Link -->
    <TextView
        android:id="@+id/btnAdmin"
        android:layout_marginTop="32dp"
        android:text="Admin Login"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/sky_blue_dark"
        android:drawableStart="@drawable/ic_shield"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Footer -->
    <TextView
        android:layout_marginTop="24dp"
        android:text="Â© 2026 SIMATS Alumni System"
        android:textSize="12sp"
        android:textColor="@color/text_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
