<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Banner with sky blue gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header_skyblue"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAnnouncementTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Announcement Title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Edit/Delete Actions -->
                <ImageView
                    android:id="@+id/ivEditAnnouncement"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/ivDeleteAnnouncement"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/white" />

            </LinearLayout>

            <!-- Target Badge -->
            <TextView
                android:id="@+id/tvAnnouncementTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/badge_white_outline"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="For: Everyone"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAnnouncementMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the announcement message body..."
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="4"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvAnnouncementDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Posted: Jan 2, 2026"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>