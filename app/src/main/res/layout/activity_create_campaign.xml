<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CreateCampaignActivity">

    <!-- Header with sky blue gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header_skyblue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:padding="8dp"
            android:background="@drawable/circle_button_bg"
            app:tint="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Create Campaign"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Campaign Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campaign Title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/etCampaignTitle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="e.g. Library Fund"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <!-- Goal Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Goal Amount (â‚¹)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/etGoalAmount"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:inputType="numberDecimal"
                android:hint="500000"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <!-- Deadline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Deadline"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/etDeadline"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="dd/mm/yyyy"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Description"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/etFundDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="Why should people donate?"
                android:gravity="top"
                android:minLines="4"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Launch Button -->
            <Button
                android:id="@+id/btnLaunchCampaign"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:text="Launch Campaign"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/sky_blue_primary"
                app:cornerRadius="12dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>