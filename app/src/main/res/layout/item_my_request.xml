<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Avatar, Mentor Info, Status Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar with Initials -->
            <TextView
                android:id="@+id/tvMentorInitials"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_light_blue"
                android:gravity="center"
                android:text="DC"
                android:textColor="#2563EB"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Mentor Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvMentorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="David Chen"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"/>

                <TextView
                    android:id="@+id/tvMentorRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Senior Engineer"
                    android:textSize="13sp"
                    android:textColor="#6B7280"/>

            </LinearLayout>

            <!-- Status Icon -->
            <ImageView
                android:id="@+id/ivStatusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_time"
                app:tint="#F59E0B"/>

        </LinearLayout>

        <!-- Requested Time and Status Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvRequestedTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Requested   2 days ago"
                android:textSize="12sp"
                android:textColor="#9CA3AF"/>

            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:background="@drawable/badge_pending_bg"
                android:text="Pending"
                android:textSize="12sp"
                android:textColor="#F59E0B"/>

        </LinearLayout>

        <!-- Approved Message (shown only for approved requests) -->
        <TextView
            android:id="@+id/tvApprovedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="@drawable/badge_slots_bg"
            android:text="You can now message this mentor."
            android:textSize="13sp"
            android:textColor="#059669"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
