<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".StudentRegisterActivity">

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/screen_padding_horizontal"
        android:background="@android:color/white"
        android:elevation="@dimen/card_elevation">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:padding="@dimen/icon_padding_sm"
            android:src="@drawable/ic_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="Create Account"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            android:textColor="#1F2937"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Full Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etRegName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/spacing_sm"
                android:background="@drawable/input_modern"
                android:padding="@dimen/screen_padding_horizontal"
                android:hint="John Doe"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="@dimen/text_size_md"
                android:inputType="textPersonName"/>

            <!-- Student ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student ID"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etRegStudentId"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="16dp"
                android:hint="2024001"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="16sp"
                android:inputType="number"/>

            <!-- Year and Department (Side by Side) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- Year Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year"
                        android:textColor="#374151"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etRegYear"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/input_modern"
                        android:padding="16dp"
                        android:hint="3rd Year"
                        android:textColor="#1F2937"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp"/>

                </LinearLayout>

                <View
                    android:layout_width="16dp"
                    android:layout_height="0dp"/>

                <!-- Department Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textColor="#374151"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/etRegDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/input_modern"
                        android:padding="16dp"
                        android:hint="CS"
                        android:textColor="#1F2937"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Email Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etRegEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="16dp"
                android:hint="student@university.edu"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="16sp"
                android:inputType="textEmailAddress"/>

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/etRegPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="16dp"
                android:hint="Create a strong password"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="16sp"
                android:inputType="textPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Must be at least 8 characters"
                android:textColor="#6B7280"
                android:textSize="12sp"/>

            <!-- Create Account Button -->
            <Button
                android:id="@+id/btnCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/spacing_xl"
                android:text="Create Account"
                android:textSize="@dimen/text_size_md"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#2563EB"
                app:cornerRadius="@dimen/card_corner_radius_small"/>

            <!-- Sign In Link -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="#6B7280"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSignInLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textColor="#2563EB"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>