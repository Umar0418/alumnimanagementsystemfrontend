<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".AdminRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:tint="@color/sky_blue_primary"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Admin Registration"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="52dp"
            android:text="Create your admin account"
            android:textSize="14sp"
            android:textColor="#6B7280"/>

        <!-- Admin Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_admin_shield"
                android:background="@drawable/circle_light_blue"
                android:padding="20dp"
                app:tint="@color/sky_blue_primary"/>

        </LinearLayout>

        <!-- Form Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Full Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="14sp"
                android:textColor="#374151"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:hint="Enter your full name"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="15sp"/>

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email Address"
                android:textSize="14sp"
                android:textColor="#374151"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:hint="admin@university.edu"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="15sp"/>

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Phone Number"
                android:textSize="14sp"
                android:textColor="#374151"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:hint="Enter your phone number"
                android:inputType="phone"
                android:paddingHorizontal="16dp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="15sp"/>

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password"
                android:textSize="14sp"
                android:textColor="#374151"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:hint="Create a password"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="15sp"/>

            <!-- Confirm Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Confirm Password"
                android:textSize="14sp"
                android:textColor="#374151"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:hint="Confirm your password"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:textSize="15sp"/>

        </LinearLayout>

        <!-- Register Button -->
        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/sky_blue_primary"
            android:text="Create Account"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:cornerRadius="12dp"/>

        <!-- Login Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textSize="14sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/sky_blue_primary"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
