<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MentorshipStatusActivity">

    <!-- Header with sky blue gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header_skyblue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/circle_button_bg"
            app:tint="@color/white"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Mentorship"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Status Found View -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardStatusView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/white"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="28dp"
                        android:gravity="center_horizontal">

                        <!-- Status Icon -->
                        <ImageView
                            android:id="@+id/ivStatusIcon"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/ic_check_circle"
                            android:padding="16dp"
                            android:background="@drawable/circle_light_blue"
                            app:tint="@color/sky_blue_primary"
                            android:backgroundTint="@color/sky_blue_primary"/>

                        <TextView
                            android:id="@+id/tvStatusTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Application Status"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <!-- Status Badge -->
                        <TextView
                            android:id="@+id/tvStatusBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="8dp"
                            android:background="@drawable/badge_active_bg"
                            android:backgroundTint="@color/sky_blue_primary"
                            android:text="STATUS"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tvStatusSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Status description"
                            android:textAlignment="center"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"/>

                        <!-- Details Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F0F9FF"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Field"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/tvFieldValue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/sky_blue_primary"
                                        android:textStyle="bold"
                                        android:textSize="13sp"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider"
                                    android:layout_marginVertical="10dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Hours/Week"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/tvHoursValue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/sky_blue_primary"
                                        android:textStyle="bold"
                                        android:textSize="13sp"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/divider"
                                    android:layout_marginVertical="10dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Style"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/tvStyleValue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/sky_blue_primary"
                                        android:textStyle="bold"
                                        android:textSize="13sp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Apply View -->
                <LinearLayout
                    android:id="@+id/llApplyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_mentor"
                        android:padding="24dp"
                        android:background="@drawable/circle_light_blue"
                        app:tint="@color/sky_blue_primary"/>

                    <TextView
                        android:id="@+id/tvApplyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Become a Mentor"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tvApplySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Share your experience and guide students on their career path."
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"/>

                    <Button
                        android:id="@+id/btnApplyNow"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="32dp"
                        android:text="Apply for Mentorship"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/sky_blue_primary"
                        app:cornerRadius="12dp"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBarStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </FrameLayout>

</LinearLayout>