<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".DonateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with sky blue gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header_skyblue"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/circle_button_bg"
                app:tint="@color/white"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Give Back"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Hero Card with Message -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F0F9FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_donate"
                        app:tint="@color/sky_blue_primary"
                        android:alpha="0.8"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Your contributions help us build better infrastructure and support deserving students through scholarships."
                        android:textColor="@color/sky_blue_primary"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:lineSpacingExtra="6dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Select Campaign Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Select Campaign"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <!-- Campaign Radio Group -->
            <RadioGroup
                android:id="@+id/rgCampaigns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <!-- Campaigns will be added dynamically -->

            </RadioGroup>

            <!-- Loading for campaigns -->
            <ProgressBar
                android:id="@+id/progressCampaigns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <!-- Empty State -->
            <TextView
                android:id="@+id/tvNoCampaigns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No active campaigns at the moment."
                android:textColor="@color/text_secondary"
                android:textAlignment="center"
                android:padding="20dp"
                android:visibility="gone"/>

            <!-- Donation Amount Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Donation Amount"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <!-- Preset Amount Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnAmount1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text="₹1,000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/sky_blue_primary"
                    android:background="@drawable/amount_button_skyblue"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnAmount2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:text="₹5,000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/sky_blue_primary"
                    android:background="@drawable/amount_button_skyblue"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/btnAmount3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="₹10,000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/sky_blue_primary"
                    android:background="@drawable/amount_button_skyblue"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

            <!-- Custom Amount -->
            <EditText
                android:id="@+id/etCustomAmount"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:hint="Enter custom amount"
                android:inputType="number"
                android:padding="14dp"
                android:background="@drawable/input_modern"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"/>

            <!-- Proceed to Pay Button -->
            <Button
                android:id="@+id/btnProceedToPay"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:text="Proceed to Pay"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/sky_blue_primary"
                app:icon="@drawable/ic_payment"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:cornerRadius="12dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
