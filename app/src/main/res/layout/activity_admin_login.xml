<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:paddingHorizontal="24dp"
    android:paddingVertical="24dp"
    tools:context=".AdminLoginActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:tint="@color/sky_blue_primary"
        android:layout_gravity="start"/>

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <!-- Admin Icon with sky blue highlight -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_admin_shield"
        android:background="@drawable/circle_light_blue"
        android:padding="20dp"
        app:tint="@color/sky_blue_primary"/>

    <!-- Title with sky blue highlight -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Admin Portal"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/sky_blue_primary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Secure access for administrators"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"/>

    <!-- Form Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Email Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="admin@university.edu"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="textEmailAddress"
                android:textSize="15sp"/>

            <!-- Password Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="••••••••"
                android:inputType="textPassword"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <!-- Login Button -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:text="Login to Dashboard"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/sky_blue_primary"
                app:cornerRadius="12dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Create Account Link -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textSize="14sp"
            android:textColor="@color/text_secondary"/>

        <TextView
            android:id="@+id/tvCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create one"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/sky_blue_primary"/>

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>