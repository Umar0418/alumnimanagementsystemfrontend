<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SendAnnouncementActivity">

    <!-- Header with sky blue gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header_skyblue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:padding="8dp"
            android:background="@drawable/circle_button_bg"
            app:tint="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Send Announcement"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Subject -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/etAnnouncementTitle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="Announcement Title"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

            <!-- Recipients -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Recipients"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Students"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/sky_blue_primary"/>

                <CheckBox
                    android:id="@+id/cbAlumni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="Alumni"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/sky_blue_primary"/>

            </LinearLayout>

            <!-- Message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Message"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/etAnnouncementMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_modern"
                android:padding="14dp"
                android:hint="Type your announcement here..."
                android:gravity="top"
                android:minLines="5"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp"/>

        </LinearLayout>

    </ScrollView>

    <!-- Send Button -->
    <Button
        android:id="@+id/btnSendBroadcast"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="20dp"
        android:text="Send Broadcast"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:icon="@drawable/ic_send"
        app:iconTint="@color/white"
        android:backgroundTint="@color/sky_blue_primary"
        app:cornerRadius="12dp"/>

</LinearLayout>